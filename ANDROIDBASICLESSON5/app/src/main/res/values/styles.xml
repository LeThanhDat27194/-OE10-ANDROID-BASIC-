<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonNumber">
        <item name="android:textColor">#514f4f</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">#b9b6b6</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="buttonSymbol">
        <item name="android:textColor">#fffcfc</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">#e69915</item>
        <item name="android:layout_margin">1dp</item>
    </style>

</resources>
